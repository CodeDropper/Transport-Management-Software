<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/apk/tools"
android:id="@+id/layout1"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#000000"
android:gravity="center_horizontal"
android:orientation="vertical"
tools:context=".DriverActivity">

    <EditText
        android:id="@+id/activity_driver_eT1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="10dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter bus number"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />
    <Button
        android:id="@+id/activity_driver_btn2"

        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"

        android:background="@drawable/buton_select_1"
        android:gravity="center_horizontal|center_vertical"
        android:text="Check bus"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <Button
        android:id="@+id/activity_driver_btn1"

        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"

        android:background="@drawable/buton_select_1"
        android:gravity="center_horizontal|center_vertical"
        android:text="Start Trip"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/activity_driver_tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center|center_horizontal"
        android:text="Enter bus number to start trip"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="@color/white"
        android:textSize="24sp" />


    <TextView
        android:id="@+id/activity_driver_tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center|center_horizontal"
        android:text="Trip Not Started"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="@android:color/holo_red_light" />

</LinearLayout>